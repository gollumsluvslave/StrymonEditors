<Window x:Class="RITS.StrymonEditor.Views.PresetStoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:RITS.StrymonEditor.Views"
        Title="PresetStoreWindow" Height="300" Width="600"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" >
    <Window.Resources>
        <v:BooleanToVisibilityConverter x:Key="VisibilityOfBool"/>
    </Window.Resources>
    <Canvas>
        <v:DownloadView DataContext="{Binding ViewModel}" Visibility="{Binding ViewModel.IsDownloadMode, Converter={StaticResource VisibilityOfBool}}"/>
        <v:UploadView DataContext="{Binding ViewModel}" Visibility="{Binding ViewModel.IsUploadMode, Converter={StaticResource VisibilityOfBool}}"/>
    </Canvas>
</Window>
